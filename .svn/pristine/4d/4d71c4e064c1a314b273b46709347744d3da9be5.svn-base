.duck {
  display: block;
  width: 120px;
  margin: 1.5rem auto;
}
.login-box{
  width: 100%;
  height: 100%;
  background: url(../../static/img/login/banner.png) no-repeat;
  background-size: 100% 100%;
  position: relative;

  .login-content{
    width: 400px;
    height: 600px;

    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    margin: auto;
    .login-content-box{
      box-sizing: border-box;
      padding: 5%;
      background: rgba(255,255,255,0.1);

      .login-title{
        text-align: center;
        font-size: 30px;
        margin-bottom: 20px;
        border-bottom: 3px solid #ccc;
        padding-bottom: 20px;
      }
      .ant-btn{
        width: 100%;
        height: 40px;
        border-radius: 10px;
        background-color: #f83c68;
        border: none;
      }
    }
    .ant-input{
      background-color: transparent !important;
      margin-bottom: 30px;
      border-radius: 10px;
      height: 40px;
    }
    }
  img{
    margin-bottom: 30px;
  }

}
